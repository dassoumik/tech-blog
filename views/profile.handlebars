<div class="container text-center">
<div class="mb-3">Welcome {{user_name}}!</div>
{{#each blogs as |blog| }}

<div class="card">
  <div class="card-header text-left">
    <span> <a href="/blog/{{blog.id}}">{{blog.title}}</a></span>
    <div class="text-right">
    <span class="text-right">Created on {{format_date blog.date_created}}</span>
    <span class="btn text-white"><i class="far fa-trash-alt"></i></span>
    </div> 
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{blog.description}} </p>  
    </blockquote>
  </div>
</div>
{{/each}}
<div class="mt-3 text-center btn button"><h2 class="text-center"><i class="fas fa-plus"></i></h2></div>
</div>
<script src="./js/profile.js"></script>


