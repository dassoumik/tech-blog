<style>
  
.bg-light-green {
  background-color: #dbf6e9;
}

.bg-green {
  background-color: #9ddfd3;
}

.bg-blue {
  background-color: #31326f;
}
</style>

<div class="container text-center">
<div class="mb-3">Welcome {{user_name}}!</div>
{{#each blogs as |blog| }}

<div class="card border rounded-lg border-dark">
  <div class="card-header text-left">
    <span > <a style="color: #f6c065;" href="/blog/{{blog.id}}">{{blog.title}}</a></span>
    <div class="text-right">
    <span class="text-right" style="color: #e48900;">Created on {{format_date blog.date_created}}</span>
    <span class="btn text-white"><i class="far fa-trash-alt"  data-id={{blog.id}}></i></span>
    </div> 
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{blog.description}} </p>  
    </blockquote>
  </div>
</div>
{{/each}}
<div class="mt-3 text-center btn button create-blog"><h2 class="text-center"><i class="fas fa-plus"></i></h2></div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/js/profile.js"></script>

