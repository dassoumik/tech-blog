
<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}

<div class="card border rounded-lg border-dark">
  <div class="card-header">
    <span> <a style="color: #f6c065;" href="/api/blogs/{{blog.id}}">{{blog.title}}</a></span>
    <div class="inline text-right">
    <span class="text-right" style="color: #e48900;">Created by {{blog.user_id}} on {{format_date blog.date_created}}</span>
    </div> 
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{blog.description}} </p>  
    </blockquote>
  </div>
</div>
{{/each}}